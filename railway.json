{
    "build": {
      "builder": "nixpacks",
      "buildCommand": "cd apps/backend && npm install && npx prisma generate"
    },
    "deploy": {
      "startCommand": "cd apps/backend && node index.js",
      "healthcheck": {
        "path": "/",
        "interval": 10,
        "timeout": 5,
        "retries": 3
      }
    }
  }